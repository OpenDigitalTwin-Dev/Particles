sudo apt -y install make gcc g++
sudo apt -y install libfftw3-dev bc

mkdir lib
mkdir obj
mkdir objmc

make -j4

mkdir -p ../install/openphase_install/lib
mkdir -p ../install/openphase_install/include

cp -r lib/*.* ../install/openphase_install/lib
cp -r include/*.* ../install/openphase_install/include